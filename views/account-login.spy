<!DOCTYPE html>
<html>
	<script type="text/javascript" src="/jquery.js"></script>
	<script type="text/javascript" src="/jquery-validation.js"></script>
	<script type="text/javascript" src="/bootstrap.js"></script>
	<script type="text/javascript" src="/controllers/account-login.js"></script>

	<script type="text/javascript" src="/scripts/api.js"></script>
	<script type="text/javascript" src="/scripts/utilities.js"></script>

	<link rel="stylesheet" type="text/css" href="/bootstrap.css">

	<script src="https://kit.fontawesome.com/79f9cbe0f5.js" crossorigin="anonymous"></script>
	<head>
		<title>Login Page</title>
	</head>
	<style>
		.card-img-top {
			width: 100%;
			height: 10vw;
			/* object-fit: cover; */
		}
	</style>
	<body>
		<!-- Desktop -->
		<div class="container">
			<div class="row align-items-center vh-100">
				<div class="d-flex mx-auto w-auto">
					<div class="card shadow border">
						<img class="card-img-top" src="/img/logo-sm.png" alt="Card image cap">
						<div class="card-body d-flex flex-column align-items-center">
							<div class="alert d-none" role="alert" id="alert"></div>
							<form method="post" id='main-form'>
								<div class='form-group mb-1'>
									<label for="email">E-mail address:</label>
									<input type="email" class='form-control' placeholder='Enter e-mail address' id="email" name="email">
								</div>

								<div class='form-group mb-1'>
									<label for="password">Password:</label>
									<input type="password" class='form-control' placeholder='Enter password' id="password" name="password">
								</div>
							</form>
							<button type="button" class="btn btn-primary" id="login_button">
								Login
							</button>
							<a href="/account/create">register</a>
							<a href="/account/forgotPassword">forgot password?</a>
						</div>
						<div class="card-footer text-muted">
							<div class="d-flex align-items-center justify-content-center">
								<!-- Grid column -->
								<div class="text-center ">
									<!-- Facebook -->
									<a href="https://www.facebook.com/EuropeTouchMassage" class="btn btn-outline-secondary btn-floating" role="button">
										<i class="fab fa-facebook-f"></i>
									</a>
									<!-- Google -->
									<a href="https://europe-touch-massage.business.site/#testimonials" class="btn btn-outline-secondary btn-floating" role="button">
										<i class="fab fa-google"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>